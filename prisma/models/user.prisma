model User {
    // ID
    id String @id @default(uuid())

    // Required Attributes
    email                   String  @unique
    given_name              String
    mailing_list_preference Boolean

    // Optional Attributes
    family_name String?
    password    String?
    usu_number  String? @unique

    // Relations
    events             Event[]
    instruments        Instrument[]
    payments           Payment[]
    roles              Role[]
    sessions           Session[]
    verificationTokens VerificationToken[]

    // Metadata
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt
}
