model User {
    // ID
    id String @id @default(uuid())

    // Required Attributes
    email                   String  @unique
    given_name              String
    mailing_list_preference Boolean

    // Optional Attributes
    family_name String?
    password    String?
    usu_number  String? @unique

    // Relations
    instruments Instrument[]
    events      Event[]

    // Metadata
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt

    // Relations
    Payments           Payment[]
    UserRole           UserRole[]
    VerificationTokens VerificationToken[]
}
