model User {
    // ID
    id String @id @default(uuid())

    // Required Attributes
    email                   String  @unique
    mailing_list_preference Boolean

    // Optional Attributes
    password   String?
    usu_number String? @unique

    // Metadata
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt

    // Relations
    EventAttendee      EventAttendee[]
    Payments           Payment[]
    Profile            Profile?
    UserInstrument     UserInstrument[]
    UserRole           UserRole[]
    VerificationTokens VerificationToken[]
}
